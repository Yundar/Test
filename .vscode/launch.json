// https://github.com/Microsoft/vscode-cpptools/blob/master/launch.md
{
    "version": "0.2.0",
    "configurations": [{
                 "name": "(gdb) Launch", // Имя конфигурации будет отображаться в выпадающем меню конфигурации запуска
                 "type": "cppdbg", // Тип конфигурации, cppdbg соответствует функции отладки, предоставляемой cpptools; можно считать, что это может быть только cppdbg
                 "request": "launch", // Тип конфигурации запроса, который может быть запуском (запуском) или присоединением (присоединением)
                 "program": "$ {fileDirname} / $ {fileBasenameNoExtension} .exe", // путь к отлаживаемой программе
                 "args": [], // Параметры командной строки, передаваемые программе во время отладки программы, обычно пустые
                 "stopAtEntry": false, // Если установлено значение true, программа остановится при входе в программу, что эквивалентно нарушению точки на главном
                 "cwd": "$ {workspaceFolder}", // Рабочий каталог при отладке программы, это папка рабочей области; измените значение на $ {fileDirname}, чтобы перейти в каталог, в котором находится файл
                 "environment": [], // переменные среды
                 "externalConsole": true, // Использовать отдельное окно cmd, когда истинно, что согласуется с другими IDE; после 18 октября установите значение false, чтобы вызвать встроенный терминал VSC
                 "internalConsoleOptions": "neverOpen", // Если он не установлен в neverOpen, при отладке он перейдет на вкладку "Debug Console". Вам не нужно вручную вводить команды в gdb, верно?
                 "MIMode": "gdb", // Укажите подключенный отладчик, который может быть gdb или lldb. Но я не пробовал lldb
                 "miDebuggerPath": "gdb.exe", // Путь отладчика, суффикс нельзя опускать под Windows, а не под Linux
        "setupCommands": [
                         {// В комплекте идет шаблон, который, кажется, может лучше отображать содержимое контейнера STL. Конкретная функция - Google
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false
            }
        ],
                 "preLaunchTask": "Compile" // Задача, выполняемая перед началом сеанса отладки, обычно это скомпилированная программа. Соответствует ярлыку tasks.json
    }]
}